<UserControl x:Class="unreal_GUI.Rename"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:unreal_GUI" xmlns:converters="clr-namespace:unreal_GUI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Thickness x:Key="Common">10,10,10,10</Thickness>
        <converters:BooleanToInverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock x:Name="Title" TextWrapping="Wrap" Text="重命名" Margin="{DynamicResource Common}" FontWeight="Bold"/>
                
            <StackPanel Orientation="Horizontal" Margin="10">
                <RadioButton x:Name="rbProject" Content="项目" IsChecked="{Binding IsProjectSelected}" Margin="0,0,10,0"/>
                <RadioButton x:Name="rbPlugin" Content="插件" IsChecked="{Binding IsProjectSelected, Converter={StaticResource InverseBooleanConverter}}"/>
            </StackPanel>
            <TextBlock x:Name="tip0" TextWrapping="Wrap" Margin="{DynamicResource Common}"><Run Language="zh-cn" Text="设置输入路径"/></TextBlock>
            <TextBox x:Name="Input" Margin="10,10,10,10" Text="{Binding InputPath}"/>
            <Button Content="设定输入路径" Margin="10,10,10,10" Command="{Binding SelectFolderCommand}"/>
            <TextBlock x:Name="tip1" TextWrapping="Wrap" Text="输入重命名名称" Margin="{DynamicResource Common}"/>
                <TextBlock TextWrapping="Wrap" Text="为避免潜在的崩溃，请勿使用中文来命名你的C++项目！" Margin="10,0,10,0" FontWeight="Bold"/>
                <TextBox x:Name="Output" Margin="10,10,10,10" Text="{Binding OutputPath}"/>

                <Button x:Name="RenameButton" Content="重命名" Margin="10,10,10,10" Command="{Binding RenameCommand}" IsEnabled="{Binding CanRename}"/>
            <TextBlock x:Name="msg" TextWrapping="Wrap" Text="{Binding Message}" Margin="10,0,10,0" Visibility="{Binding MessageVisibility}"/>
        </StackPanel>

    </Grid>
</ScrollViewer>
</UserControl>
