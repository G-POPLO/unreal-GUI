<UserControl x:Class="unreal_GUI.Rename"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:unreal_GUI" xmlns:converters="clr-namespace:unreal_GUI.Converters"
            xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Thickness x:Key="Common">10,10,10,10</Thickness>
        <converters:BooleanToInverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </UserControl.Resources>
    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <!-- 页面标题 -->
                <TextBlock Text="重命名工具" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
                
                <!-- 类型选择卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundChromeHighBrush}" 
                        BorderThickness="1" CornerRadius="4" Margin="0,0,0,20">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE946;" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="类型选择" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                            <RadioButton x:Name="rbProject" IsChecked="{Binding IsProjectSelected}" Margin="0,0,20,0">
                                <StackPanel Orientation="Horizontal">
                                    <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8B9;" Margin="0,0,5,0" FontSize="12"/>
                                    <TextBlock Text="项目"/>
                                </StackPanel>
                            </RadioButton>
                            <RadioButton x:Name="rbPlugin" IsChecked="{Binding IsProjectSelected, Converter={StaticResource InverseBooleanConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74C;" Margin="0,0,5,0" FontSize="12"/>
                                    <TextBlock Text="插件"/>
                                </StackPanel>
                            </RadioButton>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- 路径设置卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundChromeHighBrush}" 
                        BorderThickness="1" CornerRadius="4" Margin="0,0,0,20">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8B7;" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="路径设置" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <TextBlock x:Name="tip0" TextWrapping="Wrap" Margin="0,0,0,10" Text="设置输入路径"/>
                        <TextBox x:Name="Input" Margin="0,0,0,10" Text="{Binding InputPath, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Margin="0,0,0,15" Command="{Binding SelectFolderCommand}" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8B7;" Margin="0,0,5,0"/>
                                <TextBlock Text="浏览"/>
                            </StackPanel>
                        </Button>
                        
                        <TextBlock x:Name="tip1" TextWrapping="Wrap" Margin="0,0,0,10" Text="输入重命名名称"/>
                        <TextBlock TextWrapping="Wrap" Text="为避免潜在的崩溃，请勿使用中文来命名你的C++项目！" Margin="0,0,0,10" FontWeight="Bold"/>
                        <TextBox x:Name="Output" Margin="0,0,0,0" Text="{Binding OutputPath, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </Border>
                
                <!-- 重命名操作卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundChromeHighBrush}" 
                        BorderThickness="1" CornerRadius="4">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE945;" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="执行重命名" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <Button x:Name="RenameButton" Margin="0,0,0,15" Command="{Binding RenameCommand}" IsEnabled="{Binding IsRenameButtonEnabled}" 
                                Style="{DynamicResource AccentButtonStyle}" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8AC;" Margin="0,0,5,0"/>
                                <TextBlock Text="开始重命名"/>
                            </StackPanel>
                        </Button>
                        
                        <TextBlock x:Name="msg" TextWrapping="Wrap" Text="{Binding Message}" Margin="0,0,0,0" Visibility="{Binding MessageVisibility}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
