<UserControl x:Class="unreal_GUI.Compile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:unreal_GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <Grid Margin="10,10,10,10">
        <StackPanel>
            <TextBlock TextWrapping="Wrap" Margin="10,10,10,10" Text="将插件编译成指定版本"/>
            <ComboBox ItemsSource="{Binding EngineVersions}" DisplayMemberPath="Version" SelectedItem="{Binding SelectedEngine}" Margin="10,10,10,10"/>
            <TextBox Text="{Binding InputPath}" Margin="10,10,10,10"/>
            <Button Content="设定插件路径" Margin="10,10,10,10" Command="{Binding SelectInputCommand}"/>
            <TextBlock TextWrapping="Wrap" Margin="10,10,10,10" Text="请选择空白文件夹作为输出路径"/>
            <TextBox Text="{Binding OutputPath}" Margin="10,10,10,10"/>
            <Button Content="设置输出文件夹" Margin="10,10,10,10" Command="{Binding SelectOutputCommand}"/>
            <TextBlock Text="{Binding TipsText}" TextWrapping="Wrap" Margin="10,0,10,0" Visibility="{Binding TipsVisibility}"/>
            <Button Content="开始编译" Margin="10,10,10,10" Command="{Binding CompileCommand}" IsEnabled="{Binding IsCompileButtonEnabled}"/>
        </StackPanel>
    </Grid>
</ScrollViewer>
</UserControl>
