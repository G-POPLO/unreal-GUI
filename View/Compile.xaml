<UserControl x:Class="unreal_GUI.Compile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:unreal_GUI"
            xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="800">
    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <!-- 页面标题 -->
                <TextBlock Text="插件编译" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
                
                <!-- 引擎版本选择卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundChromeHighBrush}" 
                        BorderThickness="1" CornerRadius="4" Margin="0,0,0,20">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE946;" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="引擎版本选择" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,10" Text="选择目标引擎版本进行编译"/>
                        <ComboBox ItemsSource="{Binding EngineVersions}" DisplayMemberPath="Version" SelectedItem="{Binding SelectedEngine}" Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- 插件路径设置卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundChromeHighBrush}" 
                        BorderThickness="1" CornerRadius="4" Margin="0,0,0,20">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8B7;" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="插件路径设置" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,10" Text="选择要编译的插件路径"/>
                        <TextBox Text="{Binding InputPath}" Margin="0,0,0,10"/>
                        <Button Margin="0,0,0,0" Command="{Binding SelectInputCommand}" 
                                Style="{DynamicResource AccentButtonStyle}" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8B7;" Margin="0,0,5,0"/>
                                <TextBlock Text="浏览"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
                
                <!-- 输出路径设置卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundChromeHighBrush}" 
                        BorderThickness="1" CornerRadius="4" Margin="0,0,0,20">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74C;" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="输出路径设置" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,10" Text="请选择或创建空白文件夹作为输出路径"/>
                        <TextBox Text="{Binding OutputPath}" Margin="0,0,0,10"/>
                        <Button Margin="0,0,0,0" Command="{Binding SelectOutputCommand}" 
                                Style="{DynamicResource AccentButtonStyle}" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8B7;" Margin="0,0,5,0"/>
                                <TextBlock Text="浏览"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
                
                <!-- 编译操作卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundChromeHighBrush}" 
                        BorderThickness="1" CornerRadius="4">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE945;" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="执行编译" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        
                        <Button Margin="0,0,0,0" Command="{Binding CompileCommand}" IsEnabled="{Binding IsCompileButtonEnabled}" 
                                Style="{DynamicResource AccentButtonStyle}" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE768;" Margin="0,0,5,0"/>
                                <TextBlock Text="开始编译"/>
                                
                            </StackPanel>
                        </Button>
                        <TextBlock Text="{Binding TipsText}" TextWrapping="Wrap" Margin="0,0,0,15"  />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
