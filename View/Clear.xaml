<UserControl x:Class="unreal_GUI.Clear"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:unreal_GUI"
             xmlns:viewmodel="clr-namespace:unreal_GUI.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:ClearViewModel}"
            xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodel:ClearViewModel />
    </UserControl.DataContext>
    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <!-- 页面标题 -->
                <TextBlock Text="缓存清理" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
                
                <!-- 目录选择卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundChromeHighBrush}" 
                        BorderThickness="1" CornerRadius="4" Margin="0,0,0,20">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8B7;" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="目录选择" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <TextBlock TextWrapping="Wrap" Text="选择需要清理的目录：" Margin="0,0,0,10"/>
                        <TextBox x:Name="PathBox" Text="{Binding PathText, Mode=TwoWay}" Margin="0,0,0,10" IsReadOnly="True"/>
                        <Button x:Name="SelectPath" Margin="0,0,0,0" Command="{Binding SelectPathCommand}" 
                                Style="{DynamicResource AccentButtonStyle}" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8B7;" Margin="0,0,5,0"/>
                                <TextBlock Text="浏览"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
                
                <!-- 文件类型选择卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundChromeHighBrush}" 
                        BorderThickness="1" CornerRadius="4" Margin="0,0,0,20">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74C;" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="文件类型选择" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <TextBlock TextWrapping="Wrap" Text="选择需要清理的文件类型：" Margin="0,0,0,10"/>
                        <CheckBox x:Name="Saved" Margin="0,0,0,10" IsChecked="{Binding SavedChecked}">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8B7;" Margin="0,0,5,0" FontSize="12"/>
                                <TextBlock Text="Saved"/>
                            </StackPanel>
                        </CheckBox>
                        <CheckBox x:Name="ContentCheckBox" Margin="0,0,0,10" IsChecked="{Binding ContentChecked}">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8B7;" Margin="0,0,5,0" FontSize="12"/>
                                <TextBlock Text="Content"/>
                            </StackPanel>
                        </CheckBox>
                        <CheckBox x:Name="Intermediate" Margin="0,0,0,0" IsChecked="{Binding IntermediateChecked}">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8B7;" Margin="0,0,5,0" FontSize="12"/>
                                <TextBlock Text="Intermediate"/>
                            </StackPanel>
                        </CheckBox>
                    </StackPanel>
                </Border>
                
                <!-- 操作按钮卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundChromeHighBrush}" 
                        BorderThickness="1" CornerRadius="4" Margin="0,0,0,20">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE945;" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="执行操作" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <Button x:Name="ClearButton" Margin="0,0,0,15" Command="{Binding CleanCacheCommand}" 
                                Style="{DynamicResource AccentButtonStyle}" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74D;" Margin="0,0,5,0"/>
                                <TextBlock Text="开始清理"/>
                            </StackPanel>
                        </Button>
                        
                        <TextBlock x:Name="Result" TextWrapping="Wrap" Text="{Binding ResultText}" Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>


