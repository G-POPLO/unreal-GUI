<UserControl x:Class="unreal_GUI.Clear"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:unreal_GUI"
             xmlns:viewmodel="clr-namespace:unreal_GUI.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:ClearViewModel}"
            xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             mc:Ignorable="d" 
            d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodel:ClearViewModel />
    </UserControl.DataContext>
    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <!-- 页面标题 -->
                <TextBlock Text="缓存清理" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
                
                <!-- 目录选择卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundChromeHighBrush}" 
                          CornerRadius="4" Margin="0,0,0,20">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8B7;" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="目录选择" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <TextBlock TextWrapping="Wrap" Text="选择需要清理的项目目录：" Margin="0,0,0,10"/>
                        <TextBox x:Name="PathBox" Text="{Binding InputPath, Mode=TwoWay}" Margin="0,0,0,10" IsReadOnly="True"/>
                        <Button x:Name="SelectPath" Margin="0,0,0,0" Command="{Binding SelectInputPathCommand}" 
                                Style="{DynamicResource AccentButtonStyle}" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8B7;" Margin="0,0,5,0"/>
                                <TextBlock Text="浏览"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
                
                <!-- 文件类型选择卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundChromeHighBrush}" 
                          CornerRadius="4" Margin="0,0,0,20">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE74C;" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="文件类型选择" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <TextBlock TextWrapping="Wrap" Text="选择清理过程中需要排除的目录：" Margin="0,0,0,10"/>
                        <CheckBox x:Name="Saved" Margin="0,0,0,10" IsChecked="{Binding IsSaveGameChecked}">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8B7;" Margin="0,0,5,0" FontSize="12"/>
                                <TextBlock Text="Content/SaveGame"/>
                            </StackPanel>
                        </CheckBox>

                        <CheckBox x:Name="Intermediate" Margin="0,0,0,0" IsChecked="{Binding IsDerivedDataCacheChecked}">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8B7;" Margin="0,0,5,0" FontSize="12"/>
                                <TextBlock Text="Intermediate"/>
                            </StackPanel>
                        </CheckBox>
                    </StackPanel>
                </Border>
                
                <!-- 操作按钮卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundChromeHighBrush}" 
                          CornerRadius="4" Margin="0,0,0,20">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE945;" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="执行操作" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <Button x:Name="ClearButton" Margin="0,0,0,15" Command="{Binding CleanCacheCommand}" 
                                Style="{DynamicResource AccentButtonStyle}" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE74D;" Margin="0,0,5,0"/>
                                <TextBlock Text="开始清理"/>
                            </StackPanel>
                        </Button>
                        
                        <TextBlock x:Name="Result" TextWrapping="Wrap" Text="{Binding TipClearCache}" Margin="0,0,0,0"  />
                    </StackPanel>
                </Border>
                
                <!-- ZenDashboard卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundChromeHighBrush}" 
                          CornerRadius="4" Margin="0,0,0,20">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7F4;" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Zen存储服务器仪表盘" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <TextBlock TextWrapping="Wrap" Text="选择引擎版本：" Margin="0,0,0,10"/>
                        <ComboBox ItemsSource="{Binding EngineList}" DisplayMemberPath="Version" SelectedItem="{Binding SelectedEngine}" Margin="0,0,0,15"/>
                        <WrapPanel Orientation="Horizontal">
                            <Button x:Name="OpenZenDashboardButton" Margin="0,0,10,0" Command="{Binding OpenZenDashboardCommand}" 
                                Style="{DynamicResource AccentButtonStyle}" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <ui:FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7F4;" Margin="0,0,5,0"/>
                                    <TextBlock Text="打开Zen存储服务器仪表盘"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="ZenDocumentationButton" Margin="0,0,10,0" Command="{Binding OpenDocumentationCommand}" 
                                Style="{DynamicResource DefaultButtonStyle}" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <ui:FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE789;" Margin="0,0,5,0"/>
                                    <TextBlock Text="ZenDashboard文档"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>
                        <TextBlock x:Name="ZenRusult" TextWrapping="Wrap" Text="{Binding TipZen}" Margin="0,0,0,0" />
                    </StackPanel>
                </Border>
                
                <!-- 清理日志卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        BorderBrush="{DynamicResource SystemControlForegroundChromeHighBrush}" 
                          CornerRadius="4" Margin="0,0,0,20">
                    <StackPanel Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE838;" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="清理日志" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap" Text="清理 AutomationTool\Logs 目录下的所有内容和 Local\UnrealEngine 目录下的所有 XmlConfigCache.bin 文件" Margin="0,0,10,0" FontWeight="Bold" FontSize="10" />
                        <Button x:Name="CleanLogButton" Margin="0,10,10,10" Command="{Binding CleanLogCommand}" 
                                Style="{DynamicResource AccentButtonStyle}" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE838;" Margin="0,0,5,0"/>
                                <TextBlock Text="清理日志"/>
                            </StackPanel>
                        </Button>

                        <TextBlock x:Name="LogResult" TextWrapping="Wrap" Text="{Binding TipClearLog}" Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>
                
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>


