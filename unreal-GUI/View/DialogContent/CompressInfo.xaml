<UserControl x:Class="unreal_GUI.View.DialogContent.CompressInfo" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:unreal_GUI.View.DialogContent" mc:Ignorable="d" d:DesignHeight="400" d:DesignWidth="600">
    <StackPanel Margin="10">
        <!-- 压缩进度 -->
        <TextBlock Text="压缩进度" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <ProgressBar x:Name="ProgressBar" Height="20" Margin="0,0,0,10"/>
        <TextBlock x:Name="ProgressText" Text="0%" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- 压缩信息 -->
        <TextBlock Text="压缩信息" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="CompressText" TextWrapping="Wrap" IsReadOnly="True" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
        </ScrollViewer>
        
        <!-- 当前操作 -->
        <TextBlock Text="当前操作" FontSize="16" FontWeight="Bold" Margin="10,20,0,10"/>
        <TextBlock x:Name="CurrentOperationText" Text="" TextWrapping="Wrap" Margin="0,0,0,10"/>
    </StackPanel>
</UserControl>