 <UserControl x:Class="unreal_GUI.View.DialogContent.Tutorial"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:unreal_GUI.View.DialogContent"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"  
                BorderThickness="1" CornerRadius="4" >
            <Grid>
                <TextBlock Text="教程图片" HorizontalAlignment="Center" VerticalAlignment="Center" 
                          />
                <Image Source="{Binding TutorialImage}" Stretch="Uniform" Margin="10" Width="400" Height="400"/>
            </Grid>
        </Border>

        <Border Grid.Column="2" 
                BorderThickness="1" CornerRadius="4" >
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                <markdig:MarkdownViewer Markdown="{Binding MarkdownText}"/>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
