<UserControl x:Class="unreal_GUI.Model.DialogContent.Add_Categories"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:unreal_GUI.Model.DialogContent"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             mc:Ignorable="d" 
            >
    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
        <StackPanel>
      
            
            <!-- 基本信息区域 -->
            <StackPanel Margin="0,0,0,20">
           
                <!-- Key -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Key (必填)" ToolTip="用于从模板引用类别的名称，应简短易懂"/>
                    <TextBox x:Name="KeyTextBox" Width="100" Margin="0,5,0,0"  HorizontalAlignment="Left" Text="User"/>
                    <TextBlock Text="应简短易懂，用于从模板引用类别" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
                </StackPanel>
                
                <!-- IsMajorCategory -->
                <CheckBox x:Name="IsMajorCategoryCheckBox" Content="是否为主类别 (Major Category)" Margin="0,0,0,5" IsChecked="True">
                    <CheckBox.ToolTip>
                        <TextBlock>主类别显示为完整行，如"Game"类别</TextBlock>
                    </CheckBox.ToolTip>
                </CheckBox>
                <TextBlock Text="主类别在UI中显示为完整行，非主类别显示为子项" FontSize="12" Foreground="Gray" Margin="0,0,0,5"/>
                
                <!-- 图标 -->
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="类别图标"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <Border BorderBrush="Gray" BorderThickness="1" Width="300" Height="100" Margin="0,0,10,0">
                            <Image x:Name="CategoryIconImage" Stretch="UniformToFill"/>
                        </Border>
                        <StackPanel>
                            <Button x:Name="BrowseIconButton" Content="选择图标" Margin="0,0,0,10" />
                            <TextBlock Text="PNG格式，建议大小为600x200像素" FontSize="12" Foreground="Gray" TextWrapping="Wrap" Width="200"/>
                            <TextBlock x:Name="IconPathTextBlock" Margin="0,5,0,0" FontSize="12" Foreground="Blue"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            
            <!-- 本地化显示名称 -->
            <StackPanel Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="多文本语言描述" FontWeight="SemiBold" Margin="0,0,10,10"/>
                   
                </StackPanel>
                <TextBlock Text="为不同语言添加显示名称，默认为en" FontSize="12" Foreground="Gray" Margin="0,0,0,10"/>
                
             
            </StackPanel>
            
            <!-- 本地化描述 -->
            <StackPanel Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="描述" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    
                </StackPanel>
                <TextBlock Text="关于该类别的描述，可以为多语言进行单独配置" FontSize="12" Foreground="Gray" Margin="0,0,0,10"/>
                
                <ListBox x:Name="DescriptionsListBox" MinHeight="150" Margin="0,5,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <ComboBox Width="100" ItemsSource="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=DataContext.AvailableLanguages}" 
                                          SelectedValuePath="Code" DisplayMemberPath="Name" Tag="Language"/>
                                <TextBox Width="350" Height="80" Margin="0,5,10,5" TextWrapping="Wrap" AcceptsReturn="True" 
                                         Tag="Description"/>
                                <Button Content="删除"  Tag="RemoveDescription" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            
            <!-- 操作按钮 -->
            <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="SaveButton" Content="保存" Margin="0,0,10,0" Click="SaveButton_Click" IsEnabled="False"/>
                <Button x:Name="CancelButton" Content="取消" Click="CancelButton_Click"/>
            </StackPanel>-->
            
            <!-- 状态信息 -->
            <TextBlock x:Name="StatusTextBlock" Margin="0,10,0,0" FontSize="12"/>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
