<UserControl x:Class="unreal_GUI.Model.DialogContent.Add_Categories"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:unreal_GUI.Model.DialogContent"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
        <StackPanel>
            <!-- 基本信息区域 -->
            <StackPanel Margin="0,0,0,20">
                <!-- Key -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Key (必填)" FontWeight="SemiBold" ToolTip="用于从模板引用类别的名称，应简短易懂"/>
                    <TextBox Width="200" Margin="0,5,0,0" HorizontalAlignment="Left"
                             Text="{Binding CategoryKey}"
                             Padding="5"/>
                    <TextBlock Text="应简短易懂，用于从模板引用类别，例如'SIM'" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
                </StackPanel>
                
                <!-- IsMajorCategory -->
                <CheckBox Content="是否为主类别 (Major Category)" Margin="0,0,0,10" 
                          IsChecked="{Binding IsMajorCategory}">
                    <CheckBox.ToolTip>
                        <TextBlock>主类别显示为完整行，如"Game"类别</TextBlock>
                    </CheckBox.ToolTip>
                </CheckBox>
                <TextBlock Text="主类别在UI中显示为完整行，非主类别显示为子项" FontSize="12" Foreground="Gray" Margin="0,0,0,10"/>
                
                <!-- 图标 -->
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="类别图标" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <Border Width="300" Height="100" Margin="0,0,10,0">
                               
                            <Image Source="{Binding CategoryIcon}" Stretch="UniformToFill"/>
                        </Border>
                        <StackPanel>
                            <Button Command="{Binding BrowseIconCommand}" Content="选择图标" Margin="0,0,0,10" Padding="8,4"/>
                            <TextBlock Text="PNG格式，建议大小为600x200像素" FontSize="12" Foreground="Gray" TextWrapping="Wrap" Width="200"/>
                            <TextBlock Text="{Binding IconFileName}" Margin="0,5,0,0" FontSize="12" Foreground="Gray" TextWrapping="Wrap" Width="200"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            
            <!-- 本地化显示名称 -->
            <StackPanel Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="本地化显示名称" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <Button Command="{Binding AddDisplayNameCommand}" Content="添加语言" FontSize="12" Padding="5,2"/>
                </StackPanel>
                <TextBlock Text="为不同语言添加显示名称，支持英语(en)、简体中文(zh-Hans)、日语(ja)、韩语(ko)" FontSize="12" Foreground="Gray" Margin="0,0,0,10"/>
                
                <ListBox ItemsSource="{Binding DisplayNameItems}" MinHeight="150" Margin="0,5,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5" Orientation="Horizontal">
                                <ComboBox Width="100" ItemsSource="{Binding DataContext.AvailableLanguages, RelativeSource={RelativeSource AncestorType={x:Type local:Add_Categories}}}" 
                                          SelectedValuePath="Code" DisplayMemberPath="Name"
                                          SelectedValue="{Binding LanguageCode}"/>
                                <TextBox Width="300" Margin="10,0,10,0" Padding="5"
                                         Text="{Binding DisplayName}"
                                         ToolTip="输入显示名称"/>
                                <Button Content="删除" Command="{Binding DataContext.RemoveDisplayNameCommand, RelativeSource={RelativeSource AncestorType={x:Type local:Add_Categories}}}" CommandParameter="{Binding}" Padding="5,2" VerticalAlignment="Top"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            
            <!-- 本地化描述 -->
            <!--<StackPanel Margin="0,0,0,20">
